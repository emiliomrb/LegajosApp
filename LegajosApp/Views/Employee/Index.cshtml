@{
    ViewData["Title"] = "Index";
}
@model LegajosApp.Models.Employee

<div>
    <h4>Buscar legajo</h4>
    <form method="get" asp-action="GetEmployeeById" asp-controller="Employee">
        <div class="form-group row">
            <label for="employeeId" class="col-sm-2 col-form-label">DNI:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="employeeId" name="id" placeholder="valores mock: '111', '222', '333', '444'">
            </div>
            <div class="col-sm-4">
                <button type="submit" class="btn btn-primary">Search</button>
                <button type="button" class="btn btn-secondary" id="clearButton" onclick="window.location.href = '@Url.Action("Index", "Employee")'">Clear</button>
            </div>
        </div>
    </form>
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["ErrorMessage"]
        </div>
    }
</div>

@if (Model != null)
{
    <div id="employeeDetails">
        <h4>Informacion del empleado</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Legajo Numero:
            </dt>
            <dd class="col-sm-10">
                @Model.Dni
            </dd>
            <dt class="col-sm-2">
                Nombre:
            </dt>
            <dd class="col-sm-10">
                @Model.GetNameAndSurname()
            </dd>
            <dt class="col-sm-2">
                Fecha de Nacimiento:
            </dt>
            <dd class="col-sm-10">
                @Model.BirthDate
            </dd>
        </dl>
    </div>
}

